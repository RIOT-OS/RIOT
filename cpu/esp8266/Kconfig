menuconfig KCONFIG_CPU_ESP8266
    bool "Configure ESP8266 CPU"
    depends on MODULE_ESP_ESP8266
    help
        Configure ESP8266 CPU via Kconfig.

if KCONFIG_CPU_ESP8266

choice ESP8266_DEFAULT_CPU_FREQ_MHZ
   bool "CPU frequency in MHz"
   default ESP8266_DEFAULT_CPU_FREQ_MHZ_80
   help
       Defines the CPU frequency. Possible values are 80 and 160.

config ESP8266_DEFAULT_CPU_FREQ_MHZ_80
   bool "80 MHz"
config ESP8266_DEFAULT_CPU_FREQ_MHZ_160
   bool "160 MHz"
endchoice

config ESP8266_DEFAULT_CPU_FREQ_MHZ
   int
   default 80 if ESP8266_DEFAULT_CPU_FREQ_MHZ_80
   default 160 if ESP8266_DEFAULT_CPU_FREQ_MHZ_160

rsource "esp-wifi/Kconfig"
rsource "$(RIOTBASE)/cpu/esp_common/esp-now/Kconfig"

endif # ESP8266 settings
