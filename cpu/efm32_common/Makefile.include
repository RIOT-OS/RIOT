# include module specific includes
export INCLUDES += -I$(RIOTCPU)/efm32_common/include
export INCLUDES += -I$(RIOTCPU)/efm32_common/emlib/inc

# the em_device.h header requires a define with the cpu model
export CFLAGS += -D$(shell echo $(CPU_MODEL) | tr 'a-z' 'A-Z')

# export the efm32_common and emlib to be linked into the final binary
export USEMODULE += efm32_common emlib periph_common

# include default cortex-m makefile
include $(RIOTCPU)/Makefile.include.cortexm_common
