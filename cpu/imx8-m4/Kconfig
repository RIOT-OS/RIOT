config CPU_IMX8_M4
    bool
    select CPU_CORE_CORTEX_M4F
    select HAS_PERIPH_GPIO
    select HAS_PERIPH_GPIO_IRQ

config CPU_MODEL_IMX8MQ
    bool
    select CPU_IMX8_M4

config CPU_MODEL
    default "imx8mq" if CPU_MODEL_IMX8MQ

source "$(RIOTCPU)/cortexm_common/Kconfig"
