{
    "uncrustify.configPath.linux": "uncrustify-riot.cfg",
    "editor.rulers": [
        80,
        120
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "ipsec.h": "c",
        "pkt.h": "c",
        "frag.h": "c",
        "sixlowpan.h": "c",
        "sched.h": "c",
        "hdr.h": "c",
        "esp.h": "c",
        "config.h": "c",
        "debug.h": "c",
        "ipv6.h": "c",
        "ext.h": "c",
        "array": "c",
        "string_view": "c",
        "initializer_list": "c",
        "ranges": "c",
        "utility": "c",
        "hmac.h": "c",
        "ipsec_ts.h": "c",
        "ipsec_enums.h": "c",
        "ipsec_db.h": "c",
        "nettype.h": "c",
        "udp.h": "c",
        "rh.h": "c",
        "pktbuf.h": "c",
        "addr.h": "c",
        "aes.h": "c",
        "tests-hashes.h": "c",
        "sha1.h": "c",
        "ciphers.h": "c",
        "cbc.h": "c",
        "ike_payloads.h": "c",
        "ike_kernel_iface.h": "c",
        "ike.h": "c",
        "stdio.h": "c",
        "inttypes.h": "c",
        "random.h": "c",
        "settings.h": "c",
        "dh.h": "c",
        "ike_structures.h": "c",
        "benchmark.h": "c",
        "net_benchmark.h": "c",
        "ssl.h": "c",
        "shell.h": "c",
        "*.tcc": "c",
        "chrono": "c",
        "cstdlib": "c",
        "system_error": "c",
        "typeinfo": "c",
        "netif.h": "c",
        "sock_tls.h": "c",
        "ratio": "c",
        "clients.h": "c",
        "clients-cfg.h": "c",
        "error-ssl.h": "c",
        "string.h": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "C_Cpp.default.defines": ["MODULE_GNRC_IPV6_IPSEC"]
}
