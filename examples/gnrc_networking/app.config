# enable networking
CONFIG_NETWORKING=y

## GNRC stack modules ##
# select GNRC as the network stack
CONFIG_MOD_GNRC=y
# enable selection of GNRC stack related modules
CONFIG_GNRC_STACK=y
# enable ICMPv6 error messages
CONFIG_MOD_GNRC_ICMPV6_ERROR=y

# Neighbor Information Base functionalities
# router features
CONFIG_MOD_GNRC_IPV6_NIB_ROUTER=y

# enable RPL routing protocol
CONFIG_MOD_TRICKLE=y
CONFIG_MOD_GNRC_RPL=y
# enable UDP support
CONFIG_MOD_GNRC_UDP=y
# needed to dump received packets to STDIO using the pktdump module
CONFIG_MOD_GNRC_PKTDUMP=y
CONFIG_MOD_OD=y
# (optional) enable support for ICMPv6 echo messages
CONFIG_MOD_GNRC_ICMPV6_ECHO=y
# enable evtimer and xtimer, needed by some modules of the stack
CONFIG_MOD_EVTIMER=y
CONFIG_MOD_XTIMER=y

## Shell ##
# enable the shell and basic commands
CONFIG_MOD_SHELL=y
CONFIG_MOD_SHELL_COMMANDS=y
# shell needs some stdin
CONFIG_MOD_STDIN=y
# allows to print active threads
CONFIG_MOD_PS=y
# add network statistics
CONFIG_MOD_NETSTATS=y
CONFIG_MOD_NETSTATS_L2=y
CONFIG_MOD_NETSTATS_IPV6=y
CONFIG_MOD_NETSTATS_RPL=y
