if USEMODULE_VL53L1X_STD || USEMODULE_VL53L1X_ST_API

menu "VL53L1X Time-of-Flight (ToF) ranging sensor"

choice
    bool "Distance mode"
    default VL53L1X_DIST_LONG
    config VL53L1X_DIST_SHORT
        bool "Short - up to 1.3 m"
    config VL53L1X_DIST_MEDIUM
        bool "Medium - up to 2 m"
    config VL53L1X_DIST_LONG
        bool "Long - up to 4 m"
endchoice

config VL53L1X_PARAM_TIMING_BUDGET
    int "Timing budget [us]"
    default 50000
    range 20000 1000000

config VL53L1X_PARAM_PERIOD
    int "Inter-measurement period [ms]"
    default 100
    range 20 1000

endmenu

endif # USEMODULE_VL53L1X_STD || USEMODULE_VL53L1X_ST_API
