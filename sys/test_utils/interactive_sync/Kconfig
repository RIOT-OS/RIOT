config MOD_TEST_UTILS_INTERACTIVE_SYNC
    bool "Interactive synchronization"
    select MOD_STDIN

config MOD_TEST_UTILS_INTERACTIVE_SYNC_SHELL
    bool "Use the shell to synchronize"
    depends on MOD_TEST_UTILS_INTERACTIVE_SYNC
    default y if MOD_SHELL
