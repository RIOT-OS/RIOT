menuconfig MOD_GNRC_PKTBUF
    bool "GNRC Packet Buffer"
    default y
    select MOD_GNRC_PKT

if MOD_GNRC_PKTBUF

config MOD_AUTO_INIT_GNRC_PKTBUF
    bool "Auto-init GNRC Packet Buffer"
    default y if MOD_AUTO_INIT

choice
    bool "Packet Buffer implementation"
    default MOD_GNRC_PKTBUF_STATIC

config MOD_GNRC_PKTBUF_STATIC
    bool "Static"

config MOD_GNRC_PKTBUF_MALLOC
    bool "Malloc"

endchoice

config GNRC_PKTBUF_SIZE
    int "Maximum size of the static packet buffer"
    default 6144
    depends on MOD_GNRC_PKTBUF_STATIC
    help
        Set the value to 0 to allow dynamic memory management to allocate
        packets. The rational here is to have enough space for 4 full-MTU IPv6
        packets (2 incoming, 2 outgoing; 2 * 2 * 1280 B = 5 KiB) + Meta-Data
        (roughly estimated to 1 KiB; might be smaller).

endif # MOD_GNRC_PKTBUF
