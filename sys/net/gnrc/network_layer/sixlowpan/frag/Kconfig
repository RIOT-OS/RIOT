menu "6LoWPAN fragmentation"

config MOD_GNRC_SIXLOWPAN_FRAG
    bool "6LoWPAN fragmentation support"
    default y
    depends on MOD_GNRC_SIXLOWPAN
    select MOD_GNRC_SIXLOWPAN_FRAG_FB
    depends on MOD_GNRC_SIXLOWPAN_FRAG_RB

