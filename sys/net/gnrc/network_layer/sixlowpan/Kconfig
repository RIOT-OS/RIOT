menuconfig MOD_GNRC_SIXLOWPAN
    bool "6LoWPAN support"
    default HAVE_RADIO_IEEE802154 if MOD_GNRC_IPV6
    select MOD_SIXLOWPAN
    select MOD_GNRC_NETTYPE_SIXLOWPAN

if MOD_GNRC_SIXLOWPAN

config MOD_AUTO_INIT_GNRC_SIXLOWPAN
    bool "Auto-init GNRC 6LoWPAN"
    default MOD_AUTO_INIT

config GNRC_SIXLOWPAN_MSG_QUEUE_SIZE_EXP
    int "Exponent for the message queue size for the 6LoWPAN thread (as 2^n)"
    default 3
    help
        As the queue size ALWAYS needs to be power of two, this option
        represents the exponent of 2^n, which will be used as the size of
        the queue.

rsource "ctx/Kconfig"
rsource "frag/Kconfig"
rsource "iphc/Kconfig"
rsource "nd/Kconfig"

endif # MOD_GNRC_SIXLOWPAN
