menuconfig MOD_GNRC_IPV6
    bool "IPv6 support"
    default y
    depends on MOD_GNRC_IPV6_NIB
    depends on MOD_GNRC_IPV6_HDR
    depends on MOD_GNRC_NETIF
    select MOD_GNRC_NETTYPE_IPV6
    select MOD_INET_CSUM
    select MOD_IPV6_ADDR
    select HAVE_NETSTATS_IPV6

if MOD_GNRC_IPV6

config MOD_AUTO_INIT_GNRC_IPV6
    bool "Auto-init GNRC IPv6"
    default y if MOD_AUTO_INIT

config MOD_GNRC_IPV6_ROUTER
    bool "IPv6 router features"
    default y

config GNRC_IPV6_MSG_QUEUE_SIZE_EXP
    int "Exponent for the message queue size used for the IPv6 thread (as 2^n)"
    default 3
    help
        As the queue size ALWAYS needs to be power of two, this option
        represents the exponent of 2^n, which will be used as the size of
        the queue.

endif # MOD_GNRC_IPV6

rsource "blacklist/Kconfig"
rsource "ext/frag/Kconfig"
rsource "hdr/Kconfig"
rsource "nib/Kconfig"
rsource "whitelist/Kconfig"
