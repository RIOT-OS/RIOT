menuconfig MOD_GNRC_PKTDUMP
    bool "GNRC packet dump"
    depends on MOD_OD
    depends on MOD_GNRC_PKTBUF
    help
        Dump network packets to STDOUT for debugging.

if MOD_GNRC_PKTDUMP

config MOD_AUTO_INIT_GNRC_PKTDUMP
    bool "Auto-init GNRC packet dump module"
    default y if MOD_AUTO_INIT

config GNRC_PKTDUMP_MSG_QUEUE_SIZE_EXP
    int "Exponent for the queue size (resulting in the queue size 2^n)"
    default 3
    help
        As the queue size ALWAYS needs to be power of two, this option
        represents the exponent of 2^n, which will be used as the size of
        the queue.

endif # MOD_GNRC_PKTDUMP
