menuconfig MOD_GNRC_UDP
    bool "UDP support"
    select MOD_INET_CSUM
    select MOD_GNRC_NETTYPE_UDP
    select MOD_UDP

if MOD_GNRC_UDP

config MOD_AUTO_INIT_GNRC_UDP
    bool "Auto-init GNRC UDP"
    default MOD_AUTO_INIT

endif # MOD_GNRC_UDP
