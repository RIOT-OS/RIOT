menuconfig NETWORKING
    bool "Networking"

if NETWORKING

choice
    bool "Select network stack"

    config MOD_GNRC
        bool "GNRC"
        depends on MOD_GNRC_NETAPI
        depends on MOD_GNRC_NETIF
        depends on MOD_GNRC_PKTBUF
        select MOD_GNRC_NETIF_HDR
        select MOD_GNRC_NETREG

    config MOD_LWIP
        bool "LWIP"

    config MOD_EMB6
        bool "emb6"

    config MOD_OPENTHREAD
        bool "OpenThread"

endchoice

rsource "gnrc/Kconfig"

rsource "application_layer/Kconfig"
rsource "credman/Kconfig"
rsource "crosslayer/Kconfig"
rsource "netif/Kconfig"
rsource "network_layer/Kconfig"
rsource "sock/Kconfig"
rsource "link_layer/Kconfig"
rsource "transport_layer/Kconfig"

menuconfig MOD_NETSTATS
    bool "Network statistics"

if MOD_NETSTATS

config MOD_NETSTATS_L2
    bool "Layer 2 statistics"
    depends on HAVE_NETSTATS_L2

config MOD_NETSTATS_IPV6
    bool "IPv6 statistics"
    depends on HAVE_NETSTATS_IPV6

config MOD_NETSTATS_RPL
    bool "RPL routing statistics"
    depends on HAVE_NETSTATS_RPL

endif # MOD_NETSTATS

config HAVE_NETSTATS_L2
    bool
    help
        Indicates that a module provides Layer 2 statistics

config HAVE_NETSTATS_IPV6
    bool
    help
        Indicates that a module provides IPv6 statistics

config HAVE_NETSTATS_RPL
    bool
    help
        Indicates that a module provides RPL statistics

endif # NETWORKING
