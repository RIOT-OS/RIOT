+endif
+ifneq (,$(filter lwip_netif_ppp,$(USEMODULE)))
+    DIRS += src/netif/ppp
+endif
+ifneq (,$(filter lwip_polarssl,$(USEMODULE)))
+    DIRS += src/netif/ppp/polarssl
+endif
