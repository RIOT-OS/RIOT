menuconfig PKG_TLSF
    bool "(TLSF) Two-Level Segregated Fit memory allocator"

if PKG_TLSF

config MOD_TLSF_MALLOC
    bool "Malloc implementation using TLSF"
    depends on MOD_NEWLIB || BOARD_NATIVE
    select MOD_TLSF_MALLOC_NEWLIB if MOD_NEWLIB
    select MOD_TLSF_MALLOC_NATIVE if BOARD_NATIVE

config MOD_TLSF_MALLOC_NEWLIB
    bool
    help
        Malloc implementation using TLSF for newlib.

config MOD_TLSF_MALLOC_NATIVE
    bool
    help
        Malloc implementation using TLSF for native platform.

endif # PKG_TLSF
