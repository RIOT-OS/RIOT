 void memcpy1( uint8_t *dst, const uint8_t *src, uint16_t size )
 {
-    while( size-- )
-    {
-        *dst++ = *src++;
-    }
-}
+    memcpy(dst, src, size);
+};
 
 void memcpyr( uint8_t *dst, const uint8_t *src, uint16_t size )
 {
-    dst = dst + ( size - 1 );
-    while( size-- )
-    {
+    dst = dst + (size - 1);
+    while (size--) {
         *dst-- = *src++;
     }
 }
 
