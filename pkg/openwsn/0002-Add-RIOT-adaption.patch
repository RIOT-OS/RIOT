+      case SPI_BUFFER:
+         *spi_vars.pNextRxByte    = SPI_I2S_ReceiveData(SPI1);
+         spi_vars.pNextRxByte++;
+         break;
+      case SPI_LASTBYTE:
+         *spi_vars.pNextRxByte    = SPI_I2S_ReceiveData(SPI1);
+         break;
+   }
+
+   // one byte less to go
+   spi_vars.pNextTxByte++;
+   spi_vars.numTxedBytes++;
+   spi_vars.txBytesLeft--;
+
+   if (spi_vars.txBytesLeft>0) {
