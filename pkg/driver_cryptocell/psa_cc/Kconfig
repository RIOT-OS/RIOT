# Hashes

config MODULE_PSA_CC_HASHES_SHA1
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_HASHES_COMMON

config MODULE_PSA_CC_HASHES_SHA224
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_HASHES_COMMON

config MODULE_PSA_CC_HASHES_SHA256
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_HASHES_COMMON

config MODULE_PSA_CC_HASHES_SHA512
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_HASHES_COMMON

# MAC

config MODULE_PSA_CC_HMAC
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC

# AES

config MODULE_PSA_CC_AES_CBC
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_AES_COMMON

# ECC

config MODULE_PSA_CC_ECC_P192
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_ECC_COMMON

config MODULE_PSA_CC_ECC_P256
    bool
    depends on MODULE_PSA_CRYPTO
    select MODULE_PSA_CC
    select MODULE_PSA_CC_ECC_COMMON

config MODULE_PSA_CC
    bool "PSA CryptoCell Wrapper"
    select MODULE_PSA_CC_ERROR_CONVERSION

config MODULE_PSA_CC_HASHES_COMMON
    bool

config MODULE_PSA_CC_ECC_COMMON
    bool

config MODULE_PSA_CC_AES_COMMON
    bool

config MODULE_PSA_CC_ERROR_CONVERSION
    bool
