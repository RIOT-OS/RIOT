diff --git a/source/ti/drivers/Makefile b/source/ti/drivers/Makefile
new file mode 100644
index 0000000..a5f9d2c
--- /dev/null
+++ b/source/ti/drivers/Makefile
@@ -0,0 +1,22 @@
+MODULE = cc26xx_cc13xx_drivers
+
+NO_AUTO_SRC = 1
+SUBMODULES += 1
+SUBMODULES_NOFORCE = 1
+
+CFLAGS += -Wno-strict-prototypes
+CFLAGS += -Wno-old-style-definition
+
+ifneq (,$(filter cc26xx_cc13xx_rf,$(USEMODULE)))
+  DIRS += rf
+endif
+
+ifneq (,$(filter cc26xx_cc13xx_power,$(USEMODULE)))
+  DIRS += power
+endif
+
+ifneq (,$(filter cc26xx_cc13xx_utils,$(USEMODULE)))
+  DIRS += utils
+endif
+
+include $(RIOTBASE)/Makefile.base
diff --git a/source/ti/drivers/Makefile.dep b/source/ti/drivers/Makefile.dep
new file mode 100644
index 0000000..f54a6af
--- /dev/null
+++ b/source/ti/drivers/Makefile.dep
@@ -0,0 +1,7 @@
+ifneq (,$(filter cc26xx_cc13xx_rf,$(USEMODULE)))
+  USEMODULE += cc26xx_cc13xx_power
+endif
+
+ifneq (,$(filter cc26xx_cc13xx_power,$(USEMODULE)))
+  USEMODULE += cc26xx_cc13xx_utils
+endif
