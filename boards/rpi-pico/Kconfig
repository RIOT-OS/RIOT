config BOARD
    default "rpi-pico" if BOARD_RPI_PICO

config BOARD_RPI_PICO
    bool
    default y
    select CPU_MODEL_RP2040
    select HAS_PERIPH_UART

    select HAVE_SAUL_GPIO
