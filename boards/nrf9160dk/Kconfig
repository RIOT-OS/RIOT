config BOARD
    default "nrf9160dk" if BOARD_NRF9160DK

config BOARD_NRF9160DK
    bool
    default y
    select CPU_MODEL_NRF9160
    select HAS_PERIPH_I2C
    select HAS_PERIPH_SPI
    select HAS_PERIPH_TIMER
    select HAS_PERIPH_UART
