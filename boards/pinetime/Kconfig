config BOARD
    default "pinetime" if BOARD_PINETIME

config BOARD_PINETIME
    bool
    default y
    select BOARD_COMMON_NRF52
    select CPU_MODEL_NRF52832XXAA
    select HAS_PERIPH_I2C
    select HAS_PERIPH_SPI

source "$(RIOTBOARD)/common/nrf52/Kconfig"
