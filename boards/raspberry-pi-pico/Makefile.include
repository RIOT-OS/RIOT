PROGRAMMER ?= picotool
PROGRAMMERS_SUPPORTED += picotool

ifeq (picotool,$(PROGRAMMER))
	FLASHER = picotool
	FLASHFILE ?= $(ELFFILE)
	FFLAGS = load -v -x $(FLASHFILE)
endif

# For Raspberry Pi Pico the ROM (Flash) is part of the board and not embedded in the rp2040 chip.
ROM_LEN = 0x200000 # 2MB.
ROM_START_ADDR = 0x10000000 # Flash XIP address.
