config BOARD
    default "microbit" if BOARD_MICROBIT

config BOARD_MICROBIT
    bool
    default y
    select BOARD_COMMON_NRF51
    select CPU_MODEL_NRF51X22XXAB
    select HAS_PERIPH_I2C
    select HAS_PERIPH_UART

source "$(RIOTBOARD)/common/nrf51/Kconfig"
