config BOARD
    default "phynode-kw41z" if BOARD_PHYNODE_KW41Z

config BOARD_PHYNODE_KW41Z
    bool
    default y
    select BOARD_COMMON_KW41Z
    select HAS_PERIPH_I2C
    select HAS_PERIPH_SPI

