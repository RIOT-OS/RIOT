ifneq (,$(filter netdev_default,$(USEMODULE)))
  USEMODULE += cc1100
endif

ifneq (,$(filter saul_default,$(USEMODULE)))
  USEMODULE += ltc4150
  USEMODULE += sht11
endif

# default to mtd_mci if no other MTD backend is selected
ifneq (,$(filter mtd,$(USEMODULE)))
  ifeq (,$(filter mtd_%,$(USEMODULE)))
    USEMODULE += mtd_mci
  endif
endif
